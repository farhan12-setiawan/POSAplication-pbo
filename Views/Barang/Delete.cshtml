@model Barang

<h2>Hapus Barang</h2>

<h3>Apakah Anda yakin ingin menghapus barang berikut?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>Nama Barang</dt>
        <dd>@Model.Nama</dd>
        <dt>Harga Jual</dt>
        <dd>@Model.Hargajual</dd>
        <dt>Stok</dt>
        <dd>@Model.Stok</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Hapus</button>
    <a asp-action="Index" class="btn btn-secondary">Batal</a>
</form>
