@model Barang

<h2>Tambah Barang</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nama" class="control-label"></label>
        <input asp-for="Nama" class="form-control" />
        <span asp-validation-for="Nama" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hargajual" class="control-label"></label>
        <input asp-for="Hargajual" class="form-control" />
        <span asp-validation-for="Hargajual" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stok" class="control-label"></label>
        <input asp-for="Stok" class="form-control" />
        <span asp-validation-for="Stok" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Simpan</button>
</form>

<a asp-action="Index">Kembali ke Daftar Barang</a>
